<h1>List of available cards</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <td>Original text</td>
      <td>Translated text</td>
      <td>Review date</td>
    </tr>
  </thead>
  <tbody>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td>
        <%= card.review_date == nil ? "No review" : card.review_date.strftime("%d/%m/%Y") %>
      </td>
      <td>
        <%= link_to "edit", edit_card_path(card) %>
        <%= link_to "delete", card_path(card), method: :delete,
        data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
